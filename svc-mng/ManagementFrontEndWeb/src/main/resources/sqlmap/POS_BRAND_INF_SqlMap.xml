<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="POSBRANDINF">
  <select id="selectPosBrandInfByDTO" parameterClass="com.allinfinance.univer.consumer.pos.dto.PosBrandInfoQueryDTO" resultClass="java.util.HashMap" remapResults="true">
    <include refid="Commons.prefixSql"/>
    select
      T1.TERM_BRAND_ID  as "termBrandId",
      T1.BRAND_NAME     as "brandName",
      T1.TMK_INDEX      as "tmkIndex",
      T1.INS_ID_CD        as "insIdCd" 
    from
      TB_POS_BRAND_INFO T1
    where
     1=1
    <dynamic>
      <isNotEmpty prepend="and" property="termBrandId">
        T1.TERM_BRAND_ID = #termBrandId:DECIMAL#
      </isNotEmpty>
      <isNotEmpty prepend="and" property="brandName">
        UPPER(T1.BRAND_NAME) like UPPER('%'||#brandName:VARCHAR#||'%')
      </isNotEmpty>
       <isNotEmpty prepend="and" property="tmkIndex">
        T1.TMK_INDEX like '%'||#tmkIndex:VARCHAR#||'%'
      </isNotEmpty>
        <isNotEmpty prepend="and" property="insIdCd">
        T1.INS_ID_CD = #insIdCd:VARCHAR#
      </isNotEmpty>
    </dynamic>
    <include refid="Commons.suffixSql"/>
  </select>
</sqlMap>