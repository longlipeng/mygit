<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="CARDORDER">
<resultMap id="orderIdAndCountResult" class="com.allinfinance.univer.seller.order.dto.SellOrderDTO" >
    <result column="cardQuantity" property="cardQuantity" jdbcType="VARCHAR" />
    <result column="ORDER_ID" property="orderId" jdbcType="VARCHAR" />
    <result column="ORDER_TYPE" property="orderType" jdbcType="VARCHAR" />
  </resultMap>

<select id="selectOrderIdAndCount" parameterClass="com.allinfinance.univer.cardmanagement.dto.CardManagementDTO" resultMap="orderIdAndCountResult">
	 select  b.card_quantity as "cardQuantity",
             a.order_id as "ORDER_ID",
             b.order_type as "ORDER_TYPE"       
   from 
		tb_sell_order_card_list   a left join tb_sell_order  b on a.order_id=b.order_id
		where  a.card_no=#cardNo:VARCHAR# and (b.order_type='10000011' or b.order_type='60000001' or b.order_type='10000001')
</select>
</sqlMap>