<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml" />
	<constant name="struts.custom.i18n.resources" value="messageResource"></constant>
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.ui.templateDir" value="WEB-INF/themes/struts/template" />

	<!-- ireport -->
	<package name="ireport" extends="struts-default">
		<interceptors>
			<interceptor name="exceptionThrows"
				class="com.huateng.framework.struts2.CommonExceptionThrowsInterceptor">
			</interceptor>
			<interceptor-stack name="myDefaultStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="exceptionThrows"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="myDefaultStack"></default-interceptor-ref>


		<global-results>
			<result name="Exception">/WEB-INF/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="Exception" />
		</global-exception-mappings>

		<action name="viewReportOld" class="iReportActionOld" method="viewReport">
			<result name="input">WEB-INF/ireport/testReport.jsp</result>
		</action>

		<action name="viewReport" class="iReportAction" method="viewReport">
			<result name="input">WEB-INF/ireport/testReport.jsp</result>
		</action>
	</package>
</struts>
