  <select id="lookApplyStatus"  parameterClass="com.allinfinance.shangqi.gateway.dto.ApplyAndBindCardDTO"  resultMap="StatusQuery">
  		select APPLY_STATUS,CARDHOLDER_COMMENT,ID_TYPE,ID_NO from TB_APPLYANDBIND_INFO where ID_TYPE =#idType:VARCHAR# and ID_NO=#idNo:VARCHAR# and ENTITY_ID=#entityId:VARCHAR# 
