<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
    http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>ShangQiGateWayService</display-name>
	
	<!-- JNDI 数据源 begin
	<resource-ref>
		<description>JNDI DataSource</description>
		<res-ref-name>htddb</res-ref-name>
		<res-type>org.apache.commons.dbcp.BasicDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<resource-ref>
		<description>JNDI DataSource</description>
		<res-ref-name>stldb</res-ref-name>
		<res-type>org.apache.commons.dbcp.BasicDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	JNDI 数据源 end -->


	<!-- begin Spring配置 -->

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>ShangQiGateWayService.root</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:spring/applicationContext.xml,
			classpath*:spring/*.xml
		</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	 <listener>
    <listener-class>com.webservice.listener.SocketListener</listener-class>
    </listener>

	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>InitSystemServlet</servlet-name>
		<servlet-class>com.huateng.framework.servlet.InitSystemServlet</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>
	<!-- 加载配置文件 -->
	<listener>
		<listener-class>com.huateng.framework.listener.OnStartupListener</listener-class>
	</listener>
	<!-- 启动、停止MINA监听 -->
	<listener>
		<listener-class>com.huateng.hstserver.communicate.mina.common.listener.MinaServerListener</listener-class>
	</listener>
	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<!-- 签到 -->
	<servlet>
		<servlet-name>signin</servlet-name>
		<servlet-class>com.huateng.framework.servlet.SignInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>signin</servlet-name>
		<url-pattern>/signin.do</url-pattern>
	</servlet-mapping>

	<!-- 批量处理文件框架补偿机制 -->
	<servlet>
		<servlet-name>makeup</servlet-name>
		<servlet-class>com.huateng.framework.servlet.MakeUpServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ResultForPetroChina</display-name>
		<servlet-name>ResultForPetroChina</servlet-name>
		<servlet-class>com.webservice.servlet.ResultForPetroChina</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>makeup</servlet-name>
		<url-pattern>/makeup.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResultForPetroChina</servlet-name>
		<url-pattern>/ResultForPetroChina</url-pattern>
	</servlet-mapping>

	<!-- 统一调度配置 
	<servlet>
		<servlet-name>jobDispatcherServlet</servlet-name>
		<servlet-class>com.suning.framework.uts.client.core.JobDispatcherServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>jobDispatcherServlet</servlet-name>
		<url-pattern>/jobDispatcher</url-pattern>
	</servlet-mapping>
	-->
	<welcome-file-list>

		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
