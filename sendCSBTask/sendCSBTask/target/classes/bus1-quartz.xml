<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- For times when you just need to invoke a method on a specific object -->
	<bean id="bus1JobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="bus1ScheduledJob" />
		<property name="targetMethod" value="bus1Job" />
		<property name="concurrent"   value="false"/>
	</bean>

	<!-- Run the job every 2 seconds with initial delay of 1 second -->
<bean id="bus1JobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="bus1JobDetail" />
		<property name="cronExpression">
        <value>#{env['time.bus1']}</value>    <!-- 12点     0 00 00 ? * *    -->
    	</property>
	</bean>


	<!-- Scheduler factory bean to glue together jobDetails and triggers to 
		Configure Quartz Scheduler -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="bus1JobDetail" />
			</list>
		</property>
		<property name="triggers">
			<list>
				<ref bean="bus1JobTrigger" />
			</list>
		</property>
		<property name="taskExecutor" ref="taskExecutor" />
	</bean>
	
	
	
<!-- 	历史卡文件生成 -->	
		<bean id="bus4JobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="bus4ScheduledJob" />
		<property name="targetMethod" value="bus4Job" />
		<property name="concurrent"   value="false"/>
	</bean>

	<!-- Run the job every 2 seconds with initial delay of 1 second -->
<bean id="bus4JobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="bus4JobDetail" />
		<property name="cronExpression">
        <value>#{env['his.time']}</value>    <!--0 43 16 21 06 ? * 2018    2018年6月21号 16时43分0秒   -->
    	</property>
	</bean>


	<!-- Scheduler factory bean to glue together jobDetails and triggers to 
		Configure Quartz Scheduler -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="bus4JobDetail" />
			</list>
		</property>
		<property name="triggers">
			<list>
				<ref bean="bus4JobTrigger" />
			</list>
		</property>
		<property name="taskExecutor" ref="taskExecutor" />
	</bean>
<bean id="bus4ScheduledJob" class="com.allinfinance.scheduler.Bus4ScheduledJob"/>

<bean id="bus1ScheduledJob" class="com.allinfinance.scheduler.Bus1ScheduledJob">

</bean>

</beans>