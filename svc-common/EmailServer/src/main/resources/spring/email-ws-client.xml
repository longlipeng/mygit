<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-autowire="byName">

	<!-- 邮件发送服务 -->
	<bean id="emailService" class="com.suning.svc.email.impl.EmailSenderImpl">
		<property name="username" value="${email.username}" />
		<property name="passwd" value="${email.passwd}" />
		<property name="esbServer" value="${email.esb.server}" />
		<property name="senderNickname" value="${email.sender.nickname}" />
	</bean>

</beans>