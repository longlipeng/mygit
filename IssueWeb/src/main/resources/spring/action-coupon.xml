<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-autowire="byName">

	<bean id="virtualCardAction" class="com.suning.svc.coupon.web.action.VirtualCardAction"
		scope="prototype">
	</bean>
	<bean id="settleMentAction" class="com.suning.svc.coupon.web.action.SettleMentAction"
		scope="prototype">
	</bean>

	<bean id="couponSettlementAction" class="com.suning.svc.coupon.web.action.CouponSettlementAction"
		scope="prototype">
	</bean>
	<bean id="invoiceRequirement"
		class="com.suning.svc.coupon.web.action.InvoiceRequirementAction"
		scope="prototype">
	</bean>
	<!-- 客户发票信息维护 -->
	<bean id="customerInvoiceMaintainAction"
		class="com.suning.svc.coupon.web.action.CustomerInvoiceMaintainAction"
		scope="prototype" />

	<!-- 接收数据临时表查询 -->
	<bean id="tradeItemTempAction" class="com.suning.svc.coupon.web.action.TradeItemTempAction"
		scope="prototype" />

	<!-- 接收数据临时表查询 -->
	<bean id="tradeItemDealedAction" class="com.suning.svc.coupon.web.action.TradeItemDealedAction"
		scope="prototype" />

	<!-- SAP记账数据查询 -->
	<bean id="sapInfoAction" class="com.suning.svc.coupon.web.action.SapInfoAction"
		scope="prototype">
		<constructor-arg index="0" value="true" />
		<constructor-arg index="1" value="inquiry" />
	</bean>

	<!-- SAP记账数据查询（含限制） -->
	<bean id="sapInfoAction2" class="com.suning.svc.coupon.web.action.SapInfoAction"
		scope="prototype">
		<constructor-arg index="0" value="false" />
		<constructor-arg index="1" value="query" />
	</bean>

	<bean id="sqlOperationAction" class="com.suning.svc.coupon.web.action.SqlOperationAction"
		scope="prototype" />

</beans>