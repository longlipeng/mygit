<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="roleResource"  extends="struts-global" namespace="/roleResource">
		<global-results>
			<result name="list">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
			<result name="add">/WEB-INF/pages/univer/system/role/roleResourceAdd.jsp</result>
			<result name="edit">/WEB-INF/pages/univer/system/role/roleResourceEdit.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceAdd.jsp</result>
		</global-results>
		<action name="addResource" class="roleAction" method="selectResource" >
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
		</action>
		<action name="roleList" class="roleAction" method="inquery">
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
		</action>
		<action name="issuerGroupselectAjax" class="roleAction" method="selectAjax"></action>
		<action name="roleAdd" class="roleAction" method="insertRole">
			<interceptor-ref name="token" />
         	<interceptor-ref name="defaultStack" />
        	<result name="invalid.token">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceAdd.jsp</result>
		</action> 
		<action name="roleLoad" class="roleAction" method="load">
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
		</action>
		<action name="roleEdit" class="roleAction" method="updateRole">
			<interceptor-ref name="token" />
         	<interceptor-ref name="defaultStack" />
        	<result name="invalid.token">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceEdit.jsp</result>
		</action>
		<action name="roleView" class="roleAction" method="viewRole">
			<result name="view">/WEB-INF/pages/univer/system/role/roleResourceView.jsp</result>
		</action>
		<action name="roleDel" class="roleAction" method="deleteRole">
			<result name="input">/WEB-INF/pages/univer/system/role/roleResourceList.jsp</result>
		</action>
		<action name="roleListn" class="roleAction" method="inqueryRole">
			<result name="list">/WEB-INF/pages/univer/system/user/roleList.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/roleList.jsp</result>
		</action>
	</package>
</struts>