<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="user" extends="struts-global" namespace="/user">
		<global-results>
			<result name="list">/WEB-INF/pages/univer/system/user/userList.jsp</result>
			<result name="add">/WEB-INF/pages/univer/system/user/userAdd.jsp</result>
			<result name="edit">/WEB-INF/pages/univer/system/user/userEdit.jsp</result>
		</global-results>
		
		<action name="checkUserName" class="userAction" method="checkUserName"></action>
		
		<action name="listUser" class="userAction" method="list"></action>
		
		<action name="addUser" class="userAction" method="add"></action>
		
		<action name="inserUser" class="userAction" method="insert">
			<interceptor-ref name="token" />
         	<interceptor-ref name="defaultStack" />
        	<result name="invalid.token">/WEB-INF/pages/univer/system/user/userList.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userAdd.jsp</result>
		</action>
		
		<action name="loadUser" class="userAction" method="load">
			<result name="input">/WEB-INF/pages/univer/system/user/userList.jsp</result>
		</action>
		
		<action name="viewUser" class="userAction" method="view">
			<result name="view">/WEB-INF/pages/univer/system/user/userView.jsp</result>
		</action>
		
		<action name="editUser" class="userAction" method="update">
			<interceptor-ref name="token" />
         	<interceptor-ref name="defaultStack" />
        	<result name="invalid.token">/WEB-INF/pages/univer/system/user/userList.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userEdit.jsp</result>
		</action>
		
		<action name="addRole" class="userAction" method="addRole">
			<result name="input">/WEB-INF/pages/univer/system/user/userEdit.jsp</result>
		</action>
		
		<action name="delRole" class="userAction" method="delRole">
			<result name="input">/WEB-INF/pages/univer/system/user/userEdit.jsp</result>
		</action>
		
		<action name="delUser" class="userAction" method="delete">
			<result name="input">/WEB-INF/pages/univer/system/user/userList.jsp</result>
		</action>
		
		<action name="loadName" class="userAction" method="loadUser">
			<result name="edit">/WEB-INF/pages/univer/system/user/userPasswordEdit.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userList.jsp</result>
		</action>

		<action name="loadAuthUser" class="userAction" method="loadAuthUser">
			<result name="edit">/WEB-INF/pages/univer/system/user/userAuthPasswordEdit.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userList.jsp</result>
		</action>

		<action name="modifyPassword" class="userAction" method="modifyPassword">
			<result name="edit">/WEB-INF/pages/univer/system/user/userPasswordEdit.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userPasswordEdit.jsp</result>
		</action>
		
		<action name="modifyAuthPassword" class="userAction" method="modifyAuthPassword">
			<interceptor-ref name="token" />
         	<interceptor-ref name="defaultStack" />
        	<result name="invalid.token">/WEB-INF/pages/univer/system/user/userList.jsp</result>
			<result name="edit">/WEB-INF/pages/univer/system/user/userAuthPasswordEdit.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userAuthPasswordEdit.jsp</result>
		</action>
		
		<action name="selfload" class="userAction" method="selfLoad">
			<result name="edit">/WEB-INF/pages/univer/system/user/userSelfPasswordEdit.jsp</result>
			<result name="input">/WEB-INF/pages/univer/system/user/userList.jsp</result>
		</action>
		
		<action name="modifyPasswordBySelf" class="userAction" method="modifyPasswordBySelf">
			<result name="input">/WEB-INF/pages/univer/system/user/userSelfPasswordEdit.jsp</result>
			<result name="success">/WEB-INF/pages/univer/system/user/successMessage.jsp</result>
			<result name="edit">/WEB-INF/pages/univer/system/user/userSelfPasswordEdit.jsp</result>
		</action>
		
		<action name="inputAuthPassword" class="userAction" method="inputAuthPassword">
			<result name="input">/WEB-INF/pages/univer/system/user/inspectAuthPasswordInput.jsp</result>
		</action>
		<action name="inspectAuthPassword" class="userAction" method="inspectAuthPassword">
			<result name="input">/WEB-INF/pages/univer/system/user/inspectAuthPasswordInput.jsp</result>
			<result name="edit">/WEB-INF/pages/univer/entitybaseinfo/blank.jsp</result>
		</action>
	</package>
</struts>
