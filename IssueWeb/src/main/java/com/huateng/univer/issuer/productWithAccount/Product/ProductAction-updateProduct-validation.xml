	<field name="productDTO.productEnglishName">
			<field-validator type="regex">
			<param name="expression">^[a-zA-Z_ ]+$</param>
			<message>必须是英文字母(128位内)</message>
		</field-validator>
		</field>
	<field name="productDTO.cardFee">
		<field-validator type="requiredstring">
			<message>整数不超过8位(两位以上整数首位不能为零),小数位不超过2位</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
			<message>整数不超过8位(两位以上整数首位不能为零),小数位不超过2位</message>
		</field-validator>
	</field>
