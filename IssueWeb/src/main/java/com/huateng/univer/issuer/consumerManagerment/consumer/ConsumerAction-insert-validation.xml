    <field name="consumerDTO.consumerPostcode">
        <field-validator type="requiredstring" short-circuit="true">
            <message>邮编必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">64</param>
            <message>邮编不能超过64个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^\d{6}$</param>
            <message>邮编格式不正确 </message>
        </field-validator>
    </field>
    <field name="consumerDTO.consumerTelephone">
        <field-validator type="requiredstring" short-circuit="true">
            <message>电话必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>电话不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^([0-9]|[0-9\-])+$</param>
            <message>电话格式不正确！</message>
        </field-validator>
    </field>
    <field name="consumerDTO.consumerFax">
        <field-validator type="requiredstring" short-circuit="true">
            <message>传真必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>传真不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^([0-9]|[0-9\-])+$</param>
            <message>传真格式不正确！</message>
        </field-validator>
    </field>
    <field name="consumerDTO.consumerWebsite">
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">128</param>
            <message>网站不能超过128个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression"><![CDATA[^(http[s]?:\/\/)?[A-Za-z0-9]+\.[A-Za-z0-9]+[\/=\?%\-&_~`@\[\]\':+!]*([^\"\"])*$]]></param>
            <message>网站格式不正确 </message>
        </field-validator>
    </field>
    <field name="consumerDTO.salesmanId">
        <field-validator type="requiredstring" short-circuit="true">
            <message>销售代表必须选择！</message>
        </field-validator>
    </field>
