<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="layaltyContractDTO.contractBuyer">
		<field-validator type="requiredstring" short-circuit="true">
			<message>发行机构号必须选择！</message>
		</field-validator>
	</field>

	<field name="layaltyContractDTO.ruleNo">
		<field-validator type="requiredstring" short-circuit="true">
			<message>结算周期规则必须选择！</message>
		</field-validator>
	</field>

	<field name="layaltyContractDTO.contractState">
		<field-validator type="requiredstring" short-circuit="true">
			<message>合同状态必须选择！</message>
		</field-validator>
	</field>
	<field name="layaltyContractDTO.expiryDate">
		<field-validator type="requiredstring" short-circuit="true">
			<message>失效时间必须选择！</message>
		</field-validator>
	</field>
</validators>