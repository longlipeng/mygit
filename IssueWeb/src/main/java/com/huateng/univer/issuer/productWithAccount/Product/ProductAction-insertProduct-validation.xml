<validators>
	<field name="productDTO.productName">
		<field-validator type="requiredstring">
			<message>产品名称不能为空</message>
		</field-validator>
		<field-validator type="requiredstring">
			<message>请填写产品名称(80位内)</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">80</param>
			<message>请填写产品产称(80位内)</message>
		</field-validator>
	</field>
