	<field name="productDTO.noPinLimit">
		<field-validator type="requiredstring">
			<message>无pin限额不能为空</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
			<message>整数不超过8位(两位以上整数首位不能为零),小数位不超过2位</message>
		</field-validator>
	</field>	
