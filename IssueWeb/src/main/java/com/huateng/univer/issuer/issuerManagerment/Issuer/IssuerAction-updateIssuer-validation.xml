<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="issuerDTO.issuerTelephone">
        <field-validator type="requiredstring" short-circuit="true">
            <message>电话必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>电话不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^([0-9]|[0-9\-])+$</param>
            <message>电话号码格式不正确 </message>
        </field-validator>
    </field>
     <field name="issuerDTO.issuerFax">
        <field-validator type="requiredstring" short-circuit="true">
            <message>传真必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>传真不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^([0-9]|[0-9\-])+$</param>
            <message>传真格式不正确 </message>
        </field-validator>
    </field>
     <field name="issuerDTO.issuerAddress">
        <field-validator type="requiredstring" short-circuit="true">
            <message>地址必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">128</param>
            <message>地址不能超过128个字符！</message>
        </field-validator>
    </field>
    <!-- <field name="issuerDTO.issuerEnglishAddress">
        <field-validator type="requiredstring" short-circuit="true">
            <message>英文地址必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">128</param>
            <message>英文地址不能超过128个字符！</message>
        </field-validator>
    </field> -->
    <field name="issuerDTO.issuerPostcode">
        <field-validator type="requiredstring" short-circuit="true">
            <message>邮编必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>邮编不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^\d{6}$</param>
            <message>邮编格式不正确 </message>
        </field-validator>
    </field>
	<field name="issuerDTO.issuerComment" >
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">128</param>
			<message>请填写128个汉字以内</message>
		</field-validator>
	</field>
	 <field name="issuerDTO.userName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>用户名称必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">64</param>
            <message>用户名称不能超过64个字符！</message>
        </field-validator>
    </field>
    <field name="issuerDTO.userEmail">
        <field-validator type="requiredstring" short-circuit="true">
            <message>email不能为空</message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
            <message>电子邮箱格式不正确！</message>
        </field-validator>
    </field>
</validators>
