<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
	"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
        <!-- 订单日期 -->
    <field name="sellOrderDTO.orderDate">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入订单日期!</message>
        </field-validator>
    </field>
    <!-- 产品 -->
    <field name="sellOrderDTO.productId">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入产品! </message>
        </field-validator>
    </field>
    
    <!-- 包装 -->
	<field name="sellOrderDTO.packageId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请选择包装!</message>
		</field-validator>
	</field>

	<!-- 包装费 -->
	<field name="sellOrderDTO.packageFee">
		<field-validator type="stringlength">
			<param name="maxLength">14</param>
			<message>请填放数字(14位)内!</message>
		</field-validator>

		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入包装费 </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^[0-9]+(.[0-9]{0,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
	
   <!-- 卡费 -->
	<field name="sellOrderDTO.cardIssueFee">
		<field-validator type="stringlength">
			<param name="maxLength">8</param>
			<message>请填放数字(8)内!</message>
		</field-validator>

		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入卡费 </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
	<!-- 年费 -->
	<field name="sellOrderDTO.annualFee">
		<field-validator type="stringlength">
			<param name="maxLength">8</param>
			<message>请填放数字(8位)内!</message>
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入年费! </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
   
      <!-- 附加费 -->
    <field name="sellOrderDTO.additionalFee">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入附加费 </message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
            <message>请输入大于等于0且最多两位小数!</message>
        </field-validator>
    </field>
   
    <!-- 付款延期天数 -->
    <field name="sellOrderDTO.paymentDelay">
    	<field-validator type="conversion" short-circuit="true">
            <message>请输入数字</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
        <param name="expression">
    		<![CDATA[!(sellOrderDTO.getPaymentTerm().equals("4") && (sellOrderDTO.getPaymentDelay() == null || sellOrderDTO.getPaymentDelay()==0))]]>
    	</param>
    	<message>信用支付时 付款延期天数 必须大于0!</message>
    	</field-validator>
    	<field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
            <message>请输入大于等于0且最多两位小数!</message>
        </field-validator>
    </field>
   
     <!-- 附加费 -->
    <field name="sellOrderDTO.additionalFee">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入附加费 </message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
            <message>请输入大于等于0且最多两位小数!</message>
        </field-validator>
    </field>
    
     <!-- 折扣费 -->
    <field name="sellOrderDTO.discountFee">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入折扣费 </message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
            <message>请输入大于等于0且最多两位小数</message>
        </field-validator>
    </field>
    <!-- 销售人员 -->
    <field name="sellOrderDTO.saleMan">
        <field-validator type="requiredstring" short-circuit="true">
    	<message>请输入销售人员</message>
    	</field-validator>
    </field>
    
    <!-- 备注 -->
    <field name="sellOrderDTO.memo">
       <field-validator type="stringlength">
			<param name="maxLength">500</param>
			<message>500个字内</message>
		</field-validator>
    </field>
</validators>
