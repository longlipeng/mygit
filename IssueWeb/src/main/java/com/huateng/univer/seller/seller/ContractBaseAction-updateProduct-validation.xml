<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="sellerProductContractDTO.productId">
        <field-validator type="requiredstring" short-circuit="true">
            <message>产品必须输入！</message>
        </field-validator>
    </field>
    
    <field name="sellerProductContractDTO.cardFee">
        <field-validator type="requiredstring">
            <message>请输入卡费！</message>
        </field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">10</param>
			<message>请填写数字(10位内)</message>
		</field-validator>
        <field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]\d*)|0)(\.\d{1,2})?$</param>
            <message>请填写数字(10位内)</message>
        </field-validator>
    </field>
   
    <field name="sellerProductContractDTO.annualFee">
        <field-validator type="requiredstring" >
            <message>请输入卡年费！</message>
        </field-validator>
		<field-validator type="stringlength">
			<param name="maxLength">10</param>
			<message>请填写数字(10位内)</message>
		</field-validator>
        <field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]\d*)|0)(\.\d{1,2})?$</param>
            <message>请填写数字(10位内)</message>
        </field-validator>
    </field>

</validators>