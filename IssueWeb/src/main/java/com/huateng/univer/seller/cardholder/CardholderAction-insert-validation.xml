<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="cardholderDTO.entityId">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请选择客户号！</message>
        </field-validator>
    </field>
    <field name="cardholderDTO.firstName">
		<field-validator type="requiredstring" short-circuit="true">
			<message>持卡人姓名必须输入！</message>
		</field-validator>
	</field>
	<!-- 
    <field name="cardholderDTO.idNo">
		<field-validator type="requiredstring" short-circuit="true">
			<message>证件号码必须输入！</message>
		</field-validator>
	</field>
	-->
	<field name="cardholderDTO.cardholderMobile">
		<field-validator type="requiredstring" short-circuit="true">
			<message>手机号码必须输入！</message>
		</field-validator>
	</field>
		<field name="cardholderDTO.mailingAddress">
		<field-validator type="requiredstring" short-circuit="true">
			<message>邮寄地址必须输入！</message>
		</field-validator>
	</field>
</validators>