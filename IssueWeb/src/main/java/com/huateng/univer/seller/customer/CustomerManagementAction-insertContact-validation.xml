<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="contactDTO.contactName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>姓名必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">64</param>
            <message>姓名不能超过64个字符！</message>
        </field-validator>
    </field>
    
    <field name="contactDTO.contactFunction">
        
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">128</param>
            <message>职位不能超过128个字符！</message>
        </field-validator>
    </field>
    <field name="contactDTO.contactEmail">
        <field-validator type="email" short-circuit="true">
            <message>电子邮箱格式不正确！</message>
        </field-validator>
    </field>
    <field name="contactDTO.contactTelephone">
       <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>固定电话不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^([0-9]|[0-9\-])+$</param>
            <message>固定电话号码格式不正确,电话号码由数字和 - 符号组成 </message>
        </field-validator>
    </field>
     <field name="contactDTO.contactMobilePhone">
       <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>移动电话不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^([0-9]|[0-9\-])+$</param>
            <message>移动电话格式不正确 </message>
        </field-validator>
    </field>

    <field name="contactDTO.papersNo">
       <field-validator type="requiredstring" short-circuit="true">
            <message>证件号码必须输入！</message>
        </field-validator>
    </field>
     
</validators>
