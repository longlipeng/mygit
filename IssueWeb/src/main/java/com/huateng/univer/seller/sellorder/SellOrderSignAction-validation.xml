	</field>

	<!-- 充值账户 -->
	<field name="sellOrderDTO.serviceId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请选择充值账户!</message>
		</field-validator>
	</field>


	<!-- 第一次充值金额-->
	<field name="sellOrderDTO.faceValue">
		<field-validator type="stringlength">
			<param name="maxLength">14</param>
			<message>请填放数字(14位)以内!</message>
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<message>请填放数字(14位)以内!</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请填放数字(14位)以内,小数部分两位!</message>
		</field-validator>
	</field>


	<!-- 包装 -->
	<field name="sellOrderDTO.packageId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请选择包装!</message>
		</field-validator>
	</field>

	<!-- 包装费 -->
	<field name="sellOrderDTO.packageFee">
		<field-validator type="stringlength">
			<param name="maxLength">14</param>
			<message>请填放数字(14位)内!</message>
		</field-validator>

		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入包装费 </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^[0-9]+(.[0-9]{0,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>

	<!-- 卡费 -->
	<field name="sellOrderDTO.cardIssueFee">
		<field-validator type="stringlength">
			<param name="maxLength">14</param>
