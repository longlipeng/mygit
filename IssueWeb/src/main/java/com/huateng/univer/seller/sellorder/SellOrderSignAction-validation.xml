<validators>
	<!-- 订单日期 -->
	<field name="sellOrderDTO.orderDate">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入订单日期!</message>
		</field-validator>
	</field>
	<!-- 客户 -->
	<field name="sellOrderDTO.firstEntityId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入客户! </message>
		</field-validator>
	</field>

	<!-- 产品 -->
	<field name="sellOrderDTO.productId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入产品! </message>
		</field-validator>
	</field>
	<!-- 卡有效日期 -->
	<field name="sellOrderDTO.validityPeriod">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入卡有效日期!</message>
		</field-validator>
	</field>

	<!-- 卡面 -->
	<field name="sellOrderDTO.cardLayoutId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>请选择卡面!</message>
