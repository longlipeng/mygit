<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
	"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
        <!-- 订单日期 -->
    <field name="sellOrderDTO.orderDate">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入订单日期!</message>
        </field-validator>
    </field>
   
    <!-- 发票公司名称 -->
    <field name="sellOrderDTO.invoiceCompanyName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入发票公司名称</message>
        </field-validator>
    </field>
    <!-- 订单处理者 -->
     <field name="sellOrderDTO.processEntityId">
        <field-validator type="requiredstring" short-circuit="true">
            <message>订单处理者必须输入</message>
        </field-validator>
    </field>
    <!-- 卡费 -->
	<field name="sellOrderDTO.cardIssueFee">
		<field-validator type="stringlength">
			<param name="maxLength">8</param>
			<message>请填放数字(8)内!</message>
		</field-validator>

		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入卡费 </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
	<!-- 年费 -->
	<field name="sellOrderDTO.annualFee">
		<field-validator type="stringlength">
			<param name="maxLength">8</param>
			<message>请填放数字(8位)内!</message>
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入年费! </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
    
    <!-- 发票地址 -->
    <field name="sellOrderDTO.invoiceAddresses">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入发票地址 </message>
        </field-validator>
    </field>
    
    <!-- 发票内容名称 -->
     <!-- 发票内容名称 -->
    <field name="sellOrderDTO.invoiceItemId">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入发票内容名称 </message>
        </field-validator>
    </field>
    <!-- 发票日期 -->
    <field name="sellOrderDTO.invoiceDate">
        <field-validator type="requiredstring" short-circuit="true">
            <message>请输入发票日期 </message>
        </field-validator>
    </field>
    <!-- 收货地址 -->
    <field name="sellOrderDTO.deliveryPoint">
        <field-validator type="fieldexpression" short-circuit="true">
        <param name="expression">
    		<![CDATA[!(sellOrderDTO.getDeliveryMeans().equals("1") && (sellOrderDTO.getDeliveryPoint() == null ||"".equals(sellOrderDTO.getDeliveryPoint())))]]>
    	</param>
    	<message>送货上门时收货地址 必须输入!</message>
    	</field-validator>
    </field>
    
    <!-- 收货人 -->
    <field name="sellOrderDTO.orderContact">
        <field-validator type="fieldexpression" short-circuit="true">
        <param name="expression">
    		<![CDATA[!(sellOrderDTO.getDeliveryMeans().equals("1") && (sellOrderDTO.getOrderContact() == null||"".equals(sellOrderDTO.getOrderContact())) )]]>
    	</param>
    	<message>送货上门时收货人 必须输入!</message>
    	</field-validator>
    </field>
    
    <!-- 付款延期天数 -->
    <field name="sellOrderDTO.paymentDelay">
		<field-validator type="requiredstring" short-circuit="true">
			<message>付款延期天数必须是整数(1-5位)</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^([0-9]{0,4})$</param>
			<message>付款延期天数必须是整数(1-5位)</message>
		</field-validator>
	</field>
	
    <!-- 备注 -->
    <field name="sellOrderDTO.memo">
       <field-validator type="stringlength">
			<param name="maxLength">500</param>
			<message>500个字内</message>
		</field-validator>
    </field>
    <!-- 附加费-->
	<field name="sellOrderDTO.additionalFee">
		<field-validator type="stringlength">
			<param name="maxLength">8</param>
			<message>请填放数字(8位)内!</message>
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入附加费! </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
	 <!-- 折扣费-->
	<field name="sellOrderDTO.discountFee">
		<field-validator type="stringlength">
			<param name="maxLength">8</param>
			<message>请填放数字(8位)内!</message>
		</field-validator>
		<field-validator type="requiredstring" short-circuit="true">
			<message>请输入折扣费! </message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^(([1-9]{1}[0-9]{0,13})|([0]))([.]\d{1,2})?$</param>
			<message>请输入大于等于0且最多两位小数!</message>
		</field-validator>
	</field>
</validators>
