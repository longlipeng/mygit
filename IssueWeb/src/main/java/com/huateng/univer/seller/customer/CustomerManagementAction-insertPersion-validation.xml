<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="customerDTO.customerName">
		<field-validator type="requiredstring" short-circuit="true">
			<message>客户名称不能为空！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">32</param>
			<message>名称不能超过32个字符！</message>
		</field-validator>
	</field>
	<field name="customerDTO.corpCredId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>客户证件号不能为空！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">18</param>
			<message>客户证件号不能超过18个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="regex"><![CDATA[^[0-9a-zA-Z/-]+$]]></param>
			<message>客户证件号只能由数字和字母以及-组成 </message>
		</field-validator>
	</field>
	<field name="customerDTO.awareness">
		<field-validator type="requiredstring" short-circuit="true">
			<message>客户职业不能为空！</message>
		</field-validator>
	</field>
	<field name="customerDTO.corpCredStaValidity">
		<field-validator type="requiredstring" short-circuit="true">
			<message>客户证件有效期开始时间不能为空！</message>
		</field-validator>
	</field>
	<field name="customerDTO.validity">
		<field-validator type="requiredstring" short-circuit="true">
			<message>客户证件有效期结束时间不能为空！</message>
		</field-validator>
	</field>

	<field name="customerDTO.customerTelephone">
		<field-validator type="requiredstring" short-circuit="true">
			<message>电话不能为空！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">11</param>
			<message>电话不能超过11个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^([0-9]|[0-9\-])+$</param>
			<message>电话号码格式不正确 </message>
		</field-validator>
	</field>
	<field name="customerDTO.customerAddress">
		<field-validator type="requiredstring" short-circuit="true">
			<message>客户地址不能为空！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">75</param>
			<message>客户地址不能超过75个字符！</message>
		</field-validator>
	</field>
	<field name="customerDTO.city">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">10</param>
			<message>城市不能超过10个字符！</message>
		</field-validator>
	</field>


	<field name="customerDTO.salesRegionId">
		<field-validator type="required" short-circuit="true">
			<message>必须选择销售区域！</message>
		</field-validator>
	</field>
	<field name="customerDTO.email">
		<field-validator type="requiredstring" short-circuit="true">
			<message>邮箱不能为空！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">32</param>
			<message>邮箱不能超过32个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="regex"><![CDATA[[\w!#$%&'*+/=?^_`{|}~-]+(?:\.[\w!#$%&'*+/=?^_`{|}~-]+)*@(?:[\w](?:[\w-]*[\w])?\.)+[\w](?:[\w-]*[\w])?]]></param>
			<message>邮箱格式不正确 </message>
		</field-validator>
	</field>



</validators>