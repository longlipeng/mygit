    <!-- 付款延期天数 -->
    <field name="sellOrderDTO.paymentDelay">
    	<field-validator type="conversion" short-circuit="true">
            <message>请输入数字</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
        <param name="expression">
    		<![CDATA[!(sellOrderDTO.getPaymentTerm().equals("4") && (sellOrderDTO.getPaymentDelay() == null || sellOrderDTO.getPaymentDelay()==0))]]>
    	</param>
    	<message>信用支付时 付款延期天数 必须大于0!</message>
    	</field-validator>
    	<field-validator type="regex" short-circuit="true">
        	<param name="expression">^(([1-9]{1}[0-9]{0,7})|([0]))([.]\d{1,2})?$</param>
            <message>请输入大于等于0且最多两位小数!</message>
        </field-validator>
    </field>
  
    
