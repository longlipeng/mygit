<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="invoiceAddressDTO.invoiceAddress">
		<field-validator type="requiredstring" short-circuit="true">
			<message>发票地址必须输入！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">128</param>
			<message>发票地址不能超过128个字符！</message>
		</field-validator>
	</field>

	<field name="invoiceAddressDTO.addressPostcode">
		<field-validator type="requiredstring" short-circuit="true">
			<message>邮编必须输入！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">32</param>
			<message>邮编不能超过32个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^\d{6}$</param>
			<message>邮编必须是6位数字</message>
		</field-validator>
	</field>

	<field name="invoiceAddressDTO.invoiceRecipient">
		<field-validator type="requiredstring" short-circuit="true">
			<message>收件人必须输入！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">32</param>
			<message>收件人长度不能超过32个字符！</message>
		</field-validator>
	</field>

</validators>