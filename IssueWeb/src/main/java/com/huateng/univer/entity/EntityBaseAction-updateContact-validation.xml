<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="contactDTO.contactName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>姓名必须输入！</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>姓名不能超过32个字符！</message>
        </field-validator>
    </field>
    <field name="contactDTO.contactFunction">
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>联系人职位不能超过32个字符！</message>
        </field-validator>
    </field>

    <field name="contactDTO.contactEmail">
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>电子邮箱不能超过32个字符！</message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
            <message>电子邮箱要符合E-mail格式！</message>
        </field-validator>
    </field>

    <field name="contactDTO.contactTelephone">
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">16</param>
            <message>固定电话不能超过16个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <message>固定电话格式不正确,正确格式是"区号-电话号码"或者只输电话号码！</message>
        </field-validator>
    </field>

    <field name="contactDTO.contactMobilePhone">
        <field-validator type="requiredstring" short-circuit="true">
            <message>移动电话必须输入！</message>
        </field-validator>    
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>移动电话不能超过32个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^[0-9]{11}$</param>
            <message>移动电话格式不正确！</message>
        </field-validator>
    </field>
    
    <field name="contactDTO.papersNo">
        <field-validator type="requiredstring" short-circuit="true">
            <message>证件号码必须输入！</message>
        </field-validator>
    </field>
</validators>