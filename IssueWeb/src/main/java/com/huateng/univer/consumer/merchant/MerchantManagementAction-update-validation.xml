	<field name="merchantDTO.merchantPostcode">
<!--		<field-validator type="requiredstring" short-circuit="true">-->
<!--			<message>邮编必须输入！</message>-->
<!--		</field-validator>-->
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">64</param>
			<message>邮编不能超过64个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^\d{6}$</param>
			<message>邮编格式不正确 </message>
		</field-validator>
	</field>
	<field name="merchantDTO.merchantTelephone">
<!--        <field-validator type="requiredstring" short-circuit="true">-->
<!--            <message>电话必须输入！</message>-->
<!--        </field-validator> -->
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">32</param>
            <message>电话不能超过32个字符！</message>
        </field-validator>
	</field>
	<field name="merchantDTO.merchantFax">
<!--		<field-validator type="requiredstring" short-circuit="true">-->
<!--			<message>传真必须输入！</message>-->
<!--		</field-validator>-->
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">32</param>
			<message>传真不能超过32个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^([0-9]|[0-9\-])+$</param>
			<message>传真号码格式不正确！</message>
		</field-validator>
	</field>
	<field name="merchantDTO.merchantWebsite">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">128</param>
			<message>网址不能超过128个字符！</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression"><![CDATA[^(http[s]?:\/\/)?[A-Za-z0-9]+\.[A-Za-z0-9]+[\/=\?%\-&_~`@\[\]\':+!]*([^\"\"])*$]]></param>
			<message>网址格式不正确！</message>
		</field-validator>
	</field>

	  <field name="merchantDTO.mchntURL">
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">128</param>
            <message>商户网站返回URL超过128个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression"><![CDATA[^(http[s]?:\/\/)?[A-Za-z0-9]+\.[A-Za-z0-9]+[\/=\?%\-&_~`@\[\]\':+!]*([^\"\"])*$]]></param>
            <message>商户网站返回URL不正确！</message>
        </field-validator>
    </field>
    <field name="merchantDTO.dnInfo">
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">240</param>
            <message>证书信息不能超过240个字符！</message>
        </field-validator>
    </field>
     <field name="merchantDTO.txnQryTimes">
        <field-validator type="int" short-circuit="true">
            <param name="min">0</param>
            <param name="max">99999999</param>
            <message>交易查询次数必须是数字</message>
        </field-validator>
    </field>
    
	
	<field name="merchantDTO.salesmanId">
		<field-validator type="requiredstring" short-circuit="true">
			<message>市场代表必须选择！</message>
		</field-validator>
	</field>
	<field name="merchantDTO.joinDate">
		<field-validator type="requiredstring" short-circuit="true">
			<message>加盟日期必须选择！</message>
		</field-validator>
	</field>

