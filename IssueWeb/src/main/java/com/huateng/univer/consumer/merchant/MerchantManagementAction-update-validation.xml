<validators>
<field name="merchantDTO.merchantCode">
        <field-validator type="requiredstring" short-circuit="true">
            <message>商户号必须输入！</message>
        </field-validator> 
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^\d{15}$</param>
            <message>商户号必须是15位数字! </message>
        </field-validator>
    </field>
	<field name="merchantDTO.merchantName">
		<field-validator type="requiredstring" short-circuit="true">
			<message>商户注册名称必须输入！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">128</param>
			<message>商户注册名称不能超过128个字符！</message>
		</field-validator>
	</field> 
	<field name="merchantDTO.externalId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">64</param>
			<message>外部系统代码不能超过64个字符！</message>
		</field-validator>
	</field>
	<field name="merchantDTO.legacyMerchantId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">64</param>
			<message>老系统商户号不能超过64个字符！</message>
		</field-validator>
	</field>
	<field name="merchantDTO.merchantAddress">
		<field-validator type="requiredstring" short-circuit="true">
			<message>地址必须输入！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">128</param>
			<message>地址不能超过128个字符！</message>
		</field-validator>
	</field>
