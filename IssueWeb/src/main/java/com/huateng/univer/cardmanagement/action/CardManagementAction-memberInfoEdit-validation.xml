<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="memberInfoDTO.resv">
        <field-validator type="requiredstring" short-circuit="true">
            <message>您的email不能为空</message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
            <message>电子邮箱格式不正确！</message>
        </field-validator>
    </field>
    <field name="memberInfoDTO.memName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>您的姓名不能为空</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">20</param>
            <message>5-20个字符，一个汉字为两个字符。推荐使用中文姓名</message>
        </field-validator>
    </field>
    <field name="memberInfoDTO.memAddress">
        <field-validator type="requiredstring" short-circuit="true">
            <message>您的住址不能为空</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">100</param>
            <message>1-100个字符，一个汉字为两个字符</message>
        </field-validator>
    </field>
    <field name="memberInfoDTO.memZip">
        <field-validator type="requiredstring" short-circuit="true">
            <message>邮编必须输入</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">20</param>
            <message>邮编不能超过20个字符！</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <param name="expression">^\d{6}$</param>
            <message>邮编格式不正确</message>
        </field-validator>
    </field>
</validators>