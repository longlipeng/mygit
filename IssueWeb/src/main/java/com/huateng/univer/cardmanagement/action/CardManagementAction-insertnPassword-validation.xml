<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="cardManagementDTO.cardNo">
		<field-validator type="requiredstring">
			<message>请填写卡号</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[0-9]{19}</param>
			
			<message>请正确填写卡号</message>
		</field-validator>
	</field>
	<field name="cardManagementDTO.cardValidityPeriod">
		<field-validator type="required">
			<message>请先查询卡片信息</message>
		</field-validator>
	</field>
	<field name="cardManagementDTO.cvv2">
		<field-validator type="requiredstring">
			<message>请填写CVV2</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[0-9]{3}</param>

			<message>请正确填写3位CVV2</message>
		</field-validator>
	</field>
</validators>